pipeline {
    agent {
        label "Centos"
    }
    tools {
      jdk 'jdk-11.0.1'
    }

    stages {
        stage('Build') {
            steps {
                sh './gradlew clean'
                sh './gradlew build --daemon --parallel --build-cache -Dorg.gradle.jvmargs="-Xmx2048m -XX:MaxPermSize=512m -XX:+HeapDumpOnOutOfMemoryError -Dfile.encoding=UTF-8"'
            }
        }

        stage('Unit Test') {
            steps {
                sh './gradlew --continue test'
            }
        }

        stage('Component Test') {
            steps {
                sh './gradlew --continue componentTest --info  --parallel'
            }
        }
    }

    post {
        always {
            sh './gradlew clean'
        }
    }
}